---js
{
  layout: "base",
  pagination: {
    data: "collections.posts",
    size: 1,
    alias: "post"
  },
  permalink: "{{ post.url }}",
  eleventyComputed: {
    title: data => data.post.title
  }
}
---
<article class="post h-entry">
    {% if post.feature_image %}<img src="{{ post.feature_image }}">{% endif %}

    <header class="post-header">
      <h1 class="post-title p-name">{{ post.title | safe }}</h1>
    </header>
    <section class="post-content e-content">
    {{ post.html | safe }}
    </section>
    <footer class="post-footer">
    {% if post.primary_tag %}<div class="category p-category"><a href="{{ post.primary_tag.url }}">{{ post.primary_tag.name }}</a></div>{% endif %}
    <time class="dt-published" datetime="{{ post.date }}">{{ post.published_at }}</time>
    {% if post.tags %}<div class="tags">{% for tag in post.tags %}<a href="{{ tag.url }}" rel="tag">#{{ tag.name }}</a>{% if not loop.last %}, {% endif %}{% endfor %}</div>{% endif %}
    </footer>
    
  
</article>